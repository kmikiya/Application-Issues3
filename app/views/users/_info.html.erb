
<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
    <tr>
	    <th>introduction</th>
	    <th><%= user.introduction %></th>
	  </tr>

	  <tr>
        <th>follows:<%= link_to user_followings_path(user.id) do %>
	      <%= user.followings.count %>
	     <% end %></th><br>
	     <th>followers:<%= link_to user_followers_path(user.id) do %>
         <%= user.followers.count %>
        <% end %></th>
    </tr>
	  <th>
	　　<% if current_user.id != user.id %>
	    <% if current_user.following?(user) %>
      <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: "btn btn-success btn-block" %>
      <% else %>
      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-info btn-block" %>
    <% end %>
  <% end %></th>
</table>

<div class='row'>
  <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
</div>